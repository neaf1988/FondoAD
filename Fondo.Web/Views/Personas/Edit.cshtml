@model Fondo.Web.Model.PersonaMVC

@{
    ViewData["Title"] = "Personas-Editar";
    Layout = "_Layout";
}


<hr />

<form asp-action="Edit">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="Id" />
    <div class="form-row">
        <div class="form-group col-md-4">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Cedula" class="control-label"></label>
                <input asp-for="Cedula" class="form-control" />
                <span asp-validation-for="Cedula" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group col-md-4">
            <label asp-for="Nombres" class="control-label"></label>
            <input asp-for="Nombres" class="form-control" />
            <span asp-validation-for="Nombres" class="text-danger"></span>
        </div>
        <div class="form-group  col-md-4">
            <label asp-for="Apellidos" class="control-label"></label>
            <input asp-for="Apellidos" class="form-control" />
            <span asp-validation-for="Apellidos" class="text-danger"></span>
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-4">
            <label asp-for="Telefono" class="control-label"></label>
            <input asp-for="Telefono" class="form-control" />
            <span asp-validation-for="Telefono" class="text-danger"></span>
        </div>
        <div class="form-group col-md-4">
            <label asp-for="Direccion" class="control-label"></label>
            <input asp-for="Direccion" class="form-control" />
            <span asp-validation-for="Direccion" class="text-danger"></span>
        </div>
        <div class="form-group col-md-4">
            &nbsp;
        </div>
    </div>
    <div class="form-row">

        <div class="form-group col-md-4">
            <label asp-for="CorreoElectronico" class="control-label"></label>
            <input asp-for="CorreoElectronico" class="form-control" />
            <span asp-validation-for="CorreoElectronico" class="text-danger"></span>
        </div>

        <div class="form-group col-md-4">
            <label asp-for="FechaNacimiento" class="control-label"></label>
            <div>
                <div class="input-group mb-3">
                    <input asp-for="FechaNacimiento" value="@Model.FechaNacimiento.ToString("yyyy-MM-dd")" class="form-control" aria-describedby="basic-addon2" />

                    <div class="input-group-append">
                        <span class="input-group-text" id="basic-addon2"><i class="fas fa-fw fa-calendar"></i></span>
                    </div>
                </div>
            </div>
            <span asp-validation-for="FechaNacimiento" class="text-danger"></span>
        </div>
        <div class="form-group col-md-4">
            &nbsp;
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-4">
            <label asp-for="Banco" class="control-label"></label>
            <input asp-for="Banco" class="form-control" />
            <span asp-validation-for="Banco" class="text-danger"></span>
        </div>
        <div class="form-group col-md-4">
            <label asp-for="NumeroCuenta" class="control-label"></label>
            <input asp-for="NumeroCuenta" class="form-control" />
            <span asp-validation-for="NumeroCuenta" class="text-danger"></span>
        </div>
        <div class="form-group col-md-4">
            <label asp-for="MontoAhorro" class="control-label"></label>
            <input asp-for="MontoAhorro" class="form-control" />
            <span asp-validation-for="MontoAhorro" class="text-danger"></span>
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-4">
            <label asp-for="Quincena" class="control-label"></label>
            <select asp-for="Quincena" class="form-control" asp-items="ViewBag.Quincenas"></select>
            <span asp-validation-for="Quincena" class="text-danger"></span>
        </div>
        <div class="form-group col-md-4">
            <div class="checkbox">
                <label>
                    <input asp-for="Activo" /> @Html.DisplayNameFor(model => model.Activo)
                </label>
            </div>
        </div>

        <div class="form-group col-md-4">
            <div class="checkbox">
                <label>
                    <input asp-for="Afiliado" /> @Html.DisplayNameFor(model => model.Afiliado)
                </label>
            </div>
        </div>
    </div>
    <div class="form-group">
        <input type="submit" value="Guardar" class="btn btn-primary" />
    </div>
</form>


<div>
    <a asp-action="Index">Regresar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        $('#FechaNacimiento').datepicker({
            format: "yyyy-mm-dd",
            todayBtn: "linked",
            clearBtn: true,
            language: "es",
            todayHighlight: true
        });
        

    </script>
}
